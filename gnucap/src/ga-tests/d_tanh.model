// GS - here ---------------------------
device BUILT_IN_TANH {
  parse_name tanh;
  model_type BUILT_IN_TANH;
  id_letter A;
  circuit {
    ports {a c};
    admittance Yj {a c} eval=Yj;
    }
  tr_probe {
    "v{d}" = "@n_a[V] - @n_c[V]";
    "i{d}" = "@Yj[I] ";
    ij = "@Yj[I]";
  }
  
  device {
    calculated_parameters {
    }
  }
  
  common {
    unnamed area;
    raw_parameters {
      double ar "ar factor"
	name=AR default=1.0 positive;
      double b "b term"
        name=B default=-0.001 positive;
      double v0 "v0 shift"
        name=V0 default=1.0 positive;
      double cr "cr factor"
        name=CR default=1.0 positive;
        
        
    }
    calculated_parameters {
    }
  }
  
  
  eval Yj {   // ar*(v-v0)^2 + b
    FPOLY1& y = d->_y[0];
    double volts = y.x;
    double amps  = y.f0;
    trace2(d->long_label().c_str(), volts, amps);

    double polarity= (volts-c->v0)>=0?1:-1;
    
	y.f1 = c->ar *c->cr *( 1 - tanh(c->cr*(volts-c->v0)) * tanh(c->cr*(volts-c->v0) )  );
	printf(" #### model: %f \n",y.f1);
	y.f0 = c->ar        *tanh(c->cr*(volts-c->v0)) + c->b;

  }
}
/*--------------------------------------------------------------------------*/
/*--------------------------------------------------------------------------*/
model BUILT_IN_TANH {
  dev_type BUILT_IN_TANH;
  hide_base;
  inherit CARD;
  public_keys {
     A dummy=true; //?
  }
  independent {
  }
}
